{
  "name": "rose-academies-uganda",
  "private": true,
  "scripts": {
    "dev:local": "pnpm -C apps/local dev",
    "build:local": "pnpm -C apps/local build",
    "start:local": "pnpm -C apps/local start",
    "lint": "pnpm -C apps/local lint",
    "tsc": "pnpm -C apps/local tsc",
    "lint:local": "pnpm -C apps/local lint",
    "tsc:local": "pnpm -C apps/local tsc",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "pre-commit": "pnpm -C apps/local tsc && pnpm -C apps/local lint && pnpm exec prettier --check apps/local",
    "prepare": "husky",
    "dev:cloud": "pnpm -C apps/cloud dev",
    "build:cloud": "pnpm -C apps/cloud build",
    "start:cloud": "pnpm -C apps/cloud start"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "eslint": "8.57.1",
    "husky": "^9.1.5",
    "prettier": "^3.6.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "sharp"
    ],
    "overrides": {
      "nanoid": "^3.3.8"
    }
  }
}
